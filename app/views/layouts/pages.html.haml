!!!
%html{ :lang => "en" }
  %head
    %link{ :href => 'http://fonts.googleapis.com/css?family=Condiment|Press+Start+2P', :rel => 'stylesheet', :type => 'text/css' }
    %meta{'http-equiv' => "content-type", :content => "text/html;charset=UTF-8"}
    %meta{:name => "google-site-verification", :content => "aynvIRUd8CVkj47C55EPwKTSm_vKtijp53puB6hlQlU"}

    %title= @browser_title || "Foolish Aggro &middot; Game Development Studio".html_safe

    = stylesheet_link_tag "pages", :media => "all"
    = csrf_meta_tags

    = favicon_link_tag 'pages/favicon.png'
    = favicon_link_tag 'pages/apple-touch-icon.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png'

    = render "pages/ga"


  %body{ :class => params[:controller] }

    %header

      .navbar-wrapper
        .container
          .navbar.navbar-inverse.navbar-static-top
            .container
              %button.navbar-toggle{ "data-toggle" => "collapse", :type => "button", "data-target" => ".nav-collapse" }

              .brand
                = link_to image_tag("pages/banner.png"), root_path, :class => "brand-banner"
                = link_to "Foolish Aggro", root_path, :class => "navbar-brand"

              %ul.nav.navbar-nav
                %li.active= link_to "Our Games", root_path
                %li= link_to "About", "http://foolishaggro.com/t/about-us/30"
                %li= link_to "Contact", "http://foolishaggro.com/t/contact-us/31"
                %li= link_to "Forums", "/categories"


    #prime.container
      = yield

    = javascript_include_tag "pages"
