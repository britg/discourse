
.row

  .col-md-1

  .col-md-5
    .lonelygalaxy
      %h1 Lonely Galaxy
      = link_to "Dev Log", "/category/lonely-galaxy", class: "btn btn-primary"

  .col-md-3
    .tease.pyroclasm
      = image_tag "pages/pyro_logo.png", :class => "title"
      %p.status
        %span.label.label-warning Status
        v1.0 Released

      = link_to "Get it on the App Store", "https://itunes.apple.com/us/app/pyroclasm/id547060918?mt=8", :class => "btn btn-block btn-primary"


  .col-md-3
    .tease.forgecraft
      %h1.title Forgecraft
      %p.status
        %span.label.label-warning Status
        v0.1 Beta, Playable

      = link_to "Play in your browser", "http://playforgecraft.com", :class => "btn btn-block btn-primary"

.row
  .col-md-8

    - @topics.each do |topic|
      .topic
        %h3.title= link_to topic.title, topic.relative_url
        .by
          Posted by
          %strong= topic.user.username
          - topic.category.try(:tap) do |cat|
            in
            %span.label.label-info= cat.name

        .content= topic.posts.first.excerpt.html_safe

        = link_to "Read more ...", topic.relative_url, :class => ""

        %hr

    = link_to "Visit the forums for more discussions", "/latest", :class => "btn btn-primary btn-large btn-block"

  .col-md-4

    %h3 Recent Videos


    - @videos.each do |video|
      .topic
        %h4.title= link_to video.title, video.video_url, :class => "video-link"
        = link_to image_tag(video.thumbnail_url, :class => "video-thumb"), video.video_url, :class => "video-link"

        %hr

    = link_to "Twitter", "https://twitter.com/foolishaggro", :class => "btn btn-block btn-info"
    = link_to "Facebook", "https://www.facebook.com/foolishaggro", :class => "btn btn-block btn-primary"
    = link_to "Google+", "https://plus.google.com/114088551259464978564", :rel => "publisher", :class => "btn btn-block btn-danger"
